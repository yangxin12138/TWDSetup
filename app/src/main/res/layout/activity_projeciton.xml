<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backGround">

    <ImageView
        android:layout_width="@dimen/projection_title_arrow_width"
        android:layout_height="@dimen/projection_title_arrow_height"
        android:src="?attr/arrowBackSrc"
        android:layout_marginStart="@dimen/projection_title_arrow_marginStart"
        android:layout_marginTop="@dimen/projection_title_arrow_marginTop" />

    <!--投影方式 二级菜单 标题-->
    <TextView
        android:id="@+id/title_projection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/main_title_marginStart"
        android:layout_marginTop="@dimen/main_title_marginTop"
        android:text="@string/projection_mode"
        android:textColor="?attr/textColor"
        android:textSize="@dimen/main_title_textSize"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/projection_LL_marginTop"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:id="@+id/pro_pos_pos"
            android:layout_width="@dimen/projection_RL_width"
            android:layout_height="@dimen/projection_RL_height"
            android:background="?btnBg"
            android:focusable="true">

            <!--正装正投-->
            <TextView
                android:id="@+id/tv_pos_pos"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/projection_tv_height"
                android:layout_marginLeft="@dimen/projection_tv_marginLeft"
                android:paddingTop="@dimen/projection_tv_paddingTop"
                android:text="@string/projection_mode＿pos_pos"
                android:textColor="?btnTextColor"
                android:textSize="@dimen/projection_tv_textSize"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/sel_pos_pos"
                android:duplicateParentState="true"
                android:layout_width="@dimen/projection_iv_width"
                android:layout_height="@dimen/projection_iv_height"
                android:layout_marginStart="@dimen/projection_iv_marginStart"
                android:layout_marginTop="@dimen/projection_iv_marginTop"
                android:src="?icon_projection_selected"
                android:visibility="invisible"/>
        </RelativeLayout>

        <!--正装背投-->
        <RelativeLayout
            android:id="@+id/pro_pos_neg"
            android:layout_width="@dimen/projection_RL_width"
            android:layout_height="@dimen/projection_RL_height"
            android:background="?btnBg"
            android:focusable="true"
            android:layout_marginTop="@dimen/projection_RL_marginTop">

            <TextView
                android:id="@+id/tv_pos_neg"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/projection_tv_height"
                android:layout_marginLeft="@dimen/projection_tv_marginLeft"
                android:paddingTop="@dimen/projection_tv_paddingTop"
                android:text="@string/projection_mode＿pos_neg"
                android:textColor="?btnTextColor"
                android:textSize="@dimen/projection_tv_textSize"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/sel_pos_neg"
                android:duplicateParentState="true"
                android:layout_width="@dimen/projection_iv_width"
                android:layout_height="@dimen/projection_iv_height"
                android:layout_marginStart="@dimen/projection_iv_marginStart"
                android:layout_marginTop="@dimen/projection_iv_marginTop"
                android:src="?icon_projection_selected"
                android:visibility="invisible"/>
        </RelativeLayout>

        <!--吊装正投-->
        <RelativeLayout
            android:id="@+id/pro_neg_pos"
            android:layout_width="@dimen/projection_RL_width"
            android:layout_height="@dimen/projection_RL_height"
            android:background="?btnBg"
            android:focusable="true"
            android:layout_marginTop="@dimen/projection_RL_marginTop">

            <TextView
                android:id="@+id/tv_neg_pos"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/projection_tv_height"
                android:layout_marginLeft="@dimen/projection_tv_marginLeft"
                android:paddingTop="@dimen/projection_tv_paddingTop"
                android:text="@string/projection_mode＿neg_pos"
                android:textColor="?btnTextColor"
                android:textSize="@dimen/projection_tv_textSize"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/sel_neg_pos"
                android:duplicateParentState="true"
                android:layout_width="@dimen/projection_iv_width"
                android:layout_height="@dimen/projection_iv_height"
                android:layout_marginStart="@dimen/projection_iv_marginStart"
                android:layout_marginTop="@dimen/projection_iv_marginTop"
                android:src="?icon_projection_selected"
                android:visibility="invisible"/>
        </RelativeLayout>

        <!--吊装背投-->
        <RelativeLayout
            android:id="@+id/pro_neg_neg"
            android:layout_width="@dimen/projection_RL_width"
            android:layout_height="@dimen/projection_RL_height"
            android:background="?btnBg"
            android:focusable="true"
            android:layout_marginTop="@dimen/projection_RL_marginTop">

            <TextView
                android:id="@+id/tv_neg_neg"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/projection_tv_height"
                android:layout_marginLeft="@dimen/projection_tv_marginLeft"
                android:paddingTop="@dimen/projection_tv_paddingTop"
                android:text="@string/projection_mode＿neg_neg"
                android:textColor="?btnTextColor"
                android:textSize="@dimen/projection_tv_textSize"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/sel_neg_neg"
                android:duplicateParentState="true"
                android:layout_width="@dimen/projection_iv_width"
                android:layout_height="@dimen/projection_iv_height"
                android:layout_marginStart="@dimen/projection_iv_marginStart"
                android:layout_marginTop="@dimen/projection_iv_marginTop"
                android:src="?icon_projection_selected"
                android:visibility="invisible"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>